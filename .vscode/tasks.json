{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Fullclean",
            "type": "shell",
            "command": "rm -rf ./build; rm -rf ./CMakeFiles; rm .cproject; rm .project; rm .ninja_deps; rm .ninja_log; rm build.ninja; rm cmake_install.cmake; rm CMakeCache.txt; rm Makefile; rm *.bin; rm *.hex; rm *.uf2; ",
            "problemMatcher": []
        },
        {
            "type": "cmake",
            "label": "CMake: clean rebuild",
            "command": "cleanRebuild",
            "targets": [
                "all"
            ]
            
        }
    ]
}